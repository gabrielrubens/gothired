<%# Basic SEO Meta Tags %>
<meta name="description" content="<%= content_for?(:meta_description) ? yield(:meta_description) : "GotHired.ai uses artificial intelligence to match your resume to job descriptions, helping you find the perfect job opportunities with precision." %>">
<meta name="keywords" content="<%= content_for?(:meta_keywords) ? yield(:meta_keywords) : "job matching, AI resume analysis, career advancement, job search, resume optimization" %>">
<meta name="author" content="GotHired.ai">

<%# Canonical URL to prevent duplicate content issues %>
<link rel="canonical" href="<%= request.original_url %>" />

<%# Open Graph Tags for social sharing %>
<meta property="og:type" content="website">
<meta property="og:site_name" content="GotHired.ai">
<meta property="og:title" content="<%= content_for?(:og_title) ? yield(:og_title) : "GotHired.ai - Find Your Perfect Job Match with AI" %>">
<meta property="og:description" content="<%= content_for?(:og_description) ? yield(:og_description) : "AI-powered job matching technology that helps you target the right opportunities." %>">
<meta property="og:image" content="<%= content_for?(:og_image) ? yield(:og_image) : asset_url('social-share-image.jpg') %>">
<meta property="og:url" content="<%= request.original_url %>">

<%# Twitter Card Tags %>
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@gothiredai">
<meta name="twitter:title" content="<%= content_for?(:twitter_title) ? yield(:twitter_title) : "GotHired.ai - AI-Powered Job Matching" %>">
<meta name="twitter:description" content="<%= content_for?(:twitter_description) ? yield(:twitter_description) : "Find your perfect job match with our AI technology." %>">
<meta name="twitter:image" content="<%= content_for?(:twitter_image) ? yield(:twitter_image) : asset_url('social-share-image.jpg') %>">

<%# Structured Data (JSON-LD) for Google Rich Results %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "GotHired.ai",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web",
  "description": "AI-powered job matching and resume analysis platform that helps job seekers find the perfect opportunities.",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "publisher": {
    "@type": "Organization",
    "name": "GotHired.ai",
    "logo": {
      "@type": "ImageObject",
      "url": "<%= asset_url('logo.png') %>"
    }
  }
}
</script>

<%# Mobile Specific Meta Tags %>
<meta name="theme-color" content="#3a86ff">
